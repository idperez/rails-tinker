<div>
  <%=
    button_tag "",
               type: 'button',
               class: "text-purple-600 hover:text-purple-800",
               data: {
                 controller: "navigation",
                 action: "navigation#goTo",
                 path: "/contracts"
               } do %>
    <div class="flex flex-row items-center gap-1 mb-3">
      <svg width="11" height="10" viewBox="0 0 11 10" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M10.7266 5.5C10.7266 5.92188 10.3984 6.25 10 6.25H2.80469L5.26562 8.73438C5.57031 9.01562 5.57031 9.50781 5.26562 9.78906C5.125 9.92969 4.9375 10 4.75 10C4.53906 10 4.35156 9.92969 4.21094 9.78906L0.460938 6.03906C0.15625 5.75781 0.15625 5.26562 0.460938 4.98438L4.21094 1.23438C4.49219 0.929688 4.98438 0.929688 5.26562 1.23438C5.57031 1.51562 5.57031 2.00781 5.26562 2.28906L2.80469 4.75H10C10.3984 4.75 10.7266 5.10156 10.7266 5.5Z" fill="#6B63E8"/>
      </svg>
      All Contracts
    </div>
  <% end %>
  <div class="card-container mb-24">
    <div class="flex flex-row justify-between items-center px-8 py-4">
      <p class="text-lg"><%= @supplier.name %> Contracts</p>
      <div class="flex flex-col text-right">
        <p class="text-lg">AVERAGE CONTRACT VALUE</p>
        <p class="text-lg"><%= @supplier.average_contract_value.format %></p>
      </div>
    </div>
    <div class="table table-auto w-full">
      <div class="table-header-group">
        <div class="table-row bg-gray-50 text-gray-800 text-sm">
          <div class="table-cell border-t border-gray-300 p-4 pl-8">Contract Owner</div>
          <div class="table-cell border-t border-gray-300 p-4 pl-8">Contract Name</div>
          <div class="table-cell border-t border-gray-300 p-4 pl-8">Start Date</div>
          <div class="table-cell border-t border-gray-300 p-4 pl-8">End Date</div>
          <div class="table-cell border-t border-gray-300 p-4 pl-8">Contract Value</div>
        </div>
      </div>
      <div class="table-row-group">
        <% @supplier.contracts.each do |contract| %>
          <div id=<%= "#{contract.id}" %> class="table-row text-gray-600 text-sm">
          <div class="table-cell border-t border-gray-300 p-4 pl-8"><%= "#{contract.contract_owner.first_name} #{contract.contract_owner.last_name}" %></div>
          <div class="table-cell border-t border-gray-300 p-4 pl-8"><%= contract.name %></div>
          <div class="table-cell border-t border-gray-300 p-4 pl-8"><%= contract.start_date %></div>
          <div class="table-cell border-t border-gray-300 p-4 pl-8"><%= contract.end_date %></div>
          <div class="table-cell border-t border-gray-300 p-4 pl-8"><%= contract.value.format %></div>
          </div>
        <% end %>
        </div>
  </div>
</div>

